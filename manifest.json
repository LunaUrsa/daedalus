{
  "manifest_version": 3,
  "name": "SAP CPQ Tools",
  "version": "1.0",
  "description": "Tools for SAP CPQ",
  "action": {
    "default_popup": "assets/pages/popup.html",
    "default_icon": "assets/images/icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://blank.page/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "build/background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["build/content.js"]
    }
  ],
  "icons": { "128": "assets/images/icon.png" },
  "commands": {
    "activate": {
      "suggested_key": {
        "default": "Ctrl+Space",
        "mac": "Command+Space"
      },
      "description": "Activate the extension"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
