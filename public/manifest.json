{
  "short_name": "SCT",
  "name": "SAP CPQ Tools",
  "description": "Tools to make SAP CPQ better.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "./static/js/content.js"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": [
    {
      "16": "logo192.png"
    },
    {
      "48": "logo192.png"
    },
    {
      "128": "logo192.png"
    }
  ]
}